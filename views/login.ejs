<%- include('./partials/header') %>
<h2 class="text-xl"><%= title %></h2>

<form action="" method="POST">
  <div>
    <label for="email">Email</label>
    <input
      type="email"
      id="email"
      name="email"
      placeholder="example@email.com"
      class="border border-gray-400 rounded px-2 py-1 flex flex-col gap-2"
      required
    />
    <!-- prettier-ignore -->
    <% const emailErr = locals.errors ? findError(errors, 'email') : null %>
    <%- emailErr && include('./partials/error-msg', { msg: emailErr.msg }) %>
  </div>

  <div>
    <label for="password">Password</label>
    <input
      type="password"
      id="password"
      name="password"
      class="border border-gray-400 rounded px-2 py-1 flex flex-col gap-2"
      required
    />
    <!-- prettier-ignore -->
    <% const passwordErr = locals.errors ? findError(errors, 'password') : null %>
    <%- passwordErr && include('./partials/error-msg', { msg: passwordErr.msg }) %>
  </div>

  <button
    type="submit"
    class="bg-gray-500 hover:bg-gray-600 text-white rounded px-3 py-3 flex flex-col gap-2"
  >
    Login
  </button>
</form>
<%- include('./partials/footer') %>
