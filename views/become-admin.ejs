<%- include('./partials/header') %>
<h2 class="text-xl"><%= title %></h2>
<p>Want to become a club admin? Enter the secret admin passcode below.</p>
<form action="" method="POST">
  <div>
    <label for="passcode">Passcode</label>
    <input
      type="password"
      id="passcode"
      name="passcode"
      class="border border-gray-400 rounded px-2 py-1 flex flex-col gap-2"
      required
      autocomplete="off"
    />
  </div>
  <%- locals.error && include('./partials/error-msg', { msg: error }) %>
  <button
    type="submit"
    class="bg-gray-500 hover:bg-gray-600 text-white rounded px-3 py-3 flex flex-col gap-2"
  >
    Submit
  </button>
</form>

<%- include('./partials/footer') %>
